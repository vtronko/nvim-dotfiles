{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "disableDiagnostics" : {},
            "filetypes": [
                "c",
                "cpp",
                "cc"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                },
                "compilationDatabaseDirectory": "build"
            }
        }
    }
}
